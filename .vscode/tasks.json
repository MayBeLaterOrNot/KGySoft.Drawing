{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Core UnitTest",
            "command": "/usr/bin/dotnet",
            "type": "process",
            "args": [
                "build",
                 "${workspaceFolder}/KGySoft.Drawing.Core.UnitTest/KGySoft.Drawing.Core.UnitTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Drawing UnitTest",
            "command": "/usr/bin/dotnet",
            "type": "process",
            "args": [
                "build",
                 "${workspaceFolder}/Specific/GdiPlus/KGySoft.Drawing.UnitTest/KGySoft.Drawin.UnitTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}