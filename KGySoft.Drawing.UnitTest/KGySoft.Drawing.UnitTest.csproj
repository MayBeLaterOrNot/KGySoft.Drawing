<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Configurations>win-Debug;win-Release;unix-Debug;unix-Release</Configurations>
    <DefineConstants Condition="'$(Configuration)' == 'win-Debug' OR '$(Configuration)' == 'win-Release'">$(DefineConstants);WIN</DefineConstants>
    <DefineConstants Condition="'$(Configuration)' == 'unix-Debug' OR '$(Configuration)' == 'unix-Release'">$(DefineConstants);UNIX</DefineConstants>

    <!--Windows targets-->
    <!--<TargetFrameworks>net35;net40;net45;netcoreapp2.0;netcoreapp3.0</TargetFrameworks>-->
    <!--Unix targets-->
    <!--<TargetFrameworks>netcoreapp2.0;netcoreapp3.0</TargetFrameworks>-->
    <TargetFrameworks>netcoreapp3.0</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RootNamespace>KGySoft.Drawing</RootNamespace>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\KGySoft.snk</AssemblyOriginatorKeyFile>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <!-- Common NuGet references -->
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.2.0" />
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" />
  </ItemGroup>

  <!-- .NET Core only references -->
  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.1' OR '$(TargetFramework)' == 'netcoreapp3.0'">
    <PackageReference Include="System.Drawing.Common">
      <Version>4.7.0</Version>
    </PackageReference>
  </ItemGroup>

  <!-- Project references -->
  <ItemGroup>
    <ProjectReference Include="..\KGySoft.Drawing\KGySoft.Drawing.csproj" />
  </ItemGroup>

</Project>
